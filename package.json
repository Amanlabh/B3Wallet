{
  "name": "b3wallet",
  "version": "0.4.0",
  "author": "b3hr4d",
  "description": "Wallet and System Canister for the B3wallet on the Internet Computer",
  "keywords": [
    "nextjs",
    "internet computer",
    "icp",
    "starter",
    "dfinity"
  ],
  "scripts": {
    "dfx:start": "scripts/start.sh",
    "dfx:install": "scripts/install.sh",
    "dfx:stop": "dfx stop",
    "build:wallet": "./scripts/b3_wallet.sh",
    "build:simple-wallet": "./scripts/b3_simple_wallet.sh",
    "deploy": "cargo test && dfx deploy",
    "ic:deploy": "dfx generate b3_wallet && dfx deploy b3_wallet --network ic",
    "env": "node dfx.webpack.config.js init",
    "generate": "cargo test && dfx generate",
    "ledger:balance": "ts-node scripts/ledger.balance.ts",
    "ledger:transfer": "ts-node scripts/ledger.transfer.ts",
    "ledger:account-id": "ts-node ./scripts/ledger.account-id.ts",
    "load-wasm:wallet": "ts-node ./scripts/load-wasm.wallet.ts",
    "load-wasm:system": "ts-node ./scripts/load-wasm.system.ts",
    "copy-wasm": "yarn build:wallet && yarn build:simple-wallet && ts-node ./scripts/copy-wasm.ts",
    "ic:dev": "DFX_NETWORK=ic yarn dev",
    "dev": "DFX_NETWORK=local cd frontend && npm run dev",
    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "@types/node": "^18.15.13",
    "@types/node-fetch": "^2.6.3",
    "@types/semver": "^7.5.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@dfinity/agent": "^0.15",
    "@dfinity/auth-client": "^0.15.6",
    "@dfinity/candid": "^0.15.6",
    "@dfinity/identity": "^0.15.6",
    "@dfinity/identity-secp256k1": "^0.15.6",
    "@dfinity/ledger": "^0.0.7",
    "@dfinity/nns": "^0.15.1",
    "@dfinity/principal": "^0.15",
    "@dfinity/utils": "^0.0.14",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "compressorjs": "^1.2.1",
    "events": "^3.3.0",
    "framer-motion": "^10.12.16",
    "node-fetch": "^2.6.6",
    "pem-file": "^1.0.1",
    "react-dropzone": "^14.2",
    "semver": "^7.5.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  }
}
