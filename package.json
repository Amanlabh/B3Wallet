{
  "name": "b3pay",
  "version": "0.4.0",
  "author": "b3hr4d",
  "description": "Wallet and System Canister for the B3Pay on the Internet Computer",
  "keywords": [
    "nextjs",
    "internet computer",
    "icp",
    "starter",
    "dfinity"
  ],
  "scripts": {
    "dfx:start": "dfx start --enable-bitcoin --background --clean && dfx canister create internet_identity && dfx canister create ledger && dfx deploy internet_identity && scripts/ledger.sh && scripts/cmc.sh",
    "dev": "yarn env && next dev",
    "ic:dev": "DFX_NETWORK=ic next dev",
    "build:wallet": "./scripts/build-wallet.sh",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "export": "next build",
    "deploy": "cargo test && dfx deploy",
    "ic:deploy": "dfx generate b3_wallet && dfx deploy b3_wallet --network ic",
    "env": "node dfx.webpack.config.js init",
    "generate": "cargo test && dfx generate",
    "ledger:balance": "ts-node scripts/ledger.balance.ts",
    "ledger:transfer": "ts-node scripts/ledger.transfer.ts",
    "ledger:account-id": "ts-node ./scripts/ledger.account-id.ts",
    "wasm:wallet": "ts-node ./scripts/wasm.wallet.ts",
    "wasm:system": "ts-node ./scripts/wasm.system.ts",
    "wasm:copy": "ts-node ./scripts/wasm.copy.ts"
  },
  "devDependencies": {
    "@types/node": "^18.15.13",
    "@types/node-fetch": "^2.6.3",
    "@types/react": "^18.0.38",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.3",
    "eslint-plugin-react": "^7.32",
    "eslint-plugin-react-hooks": "^4.6",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@dfinity/agent": "^0.15",
    "@dfinity/auth-client": "^0.15.6",
    "@dfinity/candid": "^0.15",
    "@dfinity/identity": "^0.15.6",
    "@dfinity/identity-secp256k1": "^0.15.6",
    "@dfinity/ledger": "^0.0.7",
    "@dfinity/nns": "^0.15.1",
    "@dfinity/principal": "^0.15",
    "@dfinity/utils": "^0.0.14",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "compressorjs": "^1.2.1",
    "ethers": "^5.7.2",
    "events": "^3.3.0",
    "next": "^13.3",
    "node-fetch": "^2.6.6",
    "pem-file": "^1.0.1",
    "react": "^18.2",
    "react-dom": "^18.2",
    "react-dropzone": "^14.2",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  }
}
